{
  "name": "lolmetamind-electron",
  "version": "0.2.0",
  "private": true,
  "description": "Un asistente inteligente en tiempo real para League of Legends.",
  "author": "SO->IN Soluciones informaticas",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "electron": "npx electron .",
    "electron:dev": "concurrently --kill-others \"npm run dev\" \"wait-on http://localhost:3000 && npx electron .\"",
    "package": "npm run build && electron-builder"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron-store": "^8.2.0",
    "framer-motion": "^11.3.19",
    "next": "14.2.3",
    "node-fetch": "^2.7.0",
    "react": "^18",
    "react-dom": "^18",
    "react-draggable": "^4.4.6",
    "react-icons": "^5.2.1",
    "socket.io-client": "^4.7.5",
    "tailwindcss-textshadow": "^2.1.3",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "electron": "^22.3.27",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.lolmetamind.app",
    "productName": "LoL MetaMind",
    "files": [
      "main.js",
      "preload.js",
      "static/**/*",
      "out/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}
